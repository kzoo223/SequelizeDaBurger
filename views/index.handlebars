<div class = "container">
<div class ="row">
  <div class ="col-lg-6">
    <h1> Your Burgers </h1>
    <ul>
      {{#each burgers}}
       {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="1">
            <button type="submit" class ="btn btn-primary">Eat Me!</button>
          </form>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
  </div>

  <div class ="col-lg-6">
    <h2>Devoured Burgers</h2>
      <ul>
      {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
            <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST"><button type="submit" class="btn btn-primary">Remove</button>
            </form>
        </li>
        {{/if}}
        {{/each}}
      </ul>
  </div>
</div>



